<h1>{{user.email}}This your reviews! </h1>
<div class="container">
    <div class="container mt-5 row d-flex">
        {{#each reviews}}
            <div class="col-3 border text-center">
                <div class="row border d-flex justify-content-center">
                    <div class="row" style="width: 14rem">
                        <img src="{{card_object.image_uris.normal}}" />
                    </div>
                </div>
                <div class="row">
                    <h6>{{content}}</h6>
                </div>
                <div class="row">
                    <form action="/review/delete/{{_id}}" method="post">
                        <button
                            type="submit"
                            class="btn btn-secondary"
                        >Delete</button>
                    </form>
                </div>

            </div>

        {{/each}}
    </div>

</div>