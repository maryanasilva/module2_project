<h1 class="text-center mt-5">These are your Reviews!</h1>
<div class="container">
  <div class="container mt-5 row d-flex">
    {{#each reviews}}
      <div class="col-3 text-center">
        <div class="row d-flex justify-content-center">
          <div class="row" style="width: 14rem">
            <img src="{{card_object.image_uris.normal}}" />
          </div>
        </div><br />
        <div class="row">
          <h6>"{{content}}"</h6>
        </div>
        <div class="row">
          <form action="/review/delete/{{_id}}" method="post">
            <button
              type="submit"
              class="btn btn-outline-warning btn-sm"
            >Delete</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>